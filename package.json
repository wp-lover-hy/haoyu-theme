{
  "name": "haoyuai-child-theme",
  "version": "1.0.0",
  "description": "HaoYu AI Child Theme for GeneratePress",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run sass:watch\" \"npm run js:watch\"",
    "build": "npm run sass:build && npm run js:build",
    "sass:watch": "sass src/scss/main.scss dist/main.css --watch --style=expanded",
    "sass:build": "sass src/scss/main.scss dist/main.css --style=compressed --no-source-map",
    "js:watch": "esbuild src/js/main.js --bundle --outfile=dist/main.js --watch --sourcemap",
    "js:build": "esbuild src/js/main.js --bundle --outfile=dist/main.js --minify"
  },
  "keywords": [
    "wordpress",
    "theme",
    "generatepress",
    "child-theme"
  ],
  "author": "Your Name",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "sass": "^1.69.0",
    "esbuild": "^0.19.0",
    "concurrently": "^8.2.2"
  }
}