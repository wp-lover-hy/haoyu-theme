{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "HaoYu AI Child Theme",
	"description": "A child theme for GeneratePress, designed for HaoYu AI with modern block editor support.",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		},
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#1d1f23",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#5a6371",
					"name": "Text Muted",
					"slug": "text-muted"
				},
				{
					"color": "#7b6cff",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#5d6bff",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#9b7bff",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#f7f8ff",
					"name": "Background Soft",
					"slug": "bg-soft"
				},
				{
					"color": "#e6e8f0",
					"name": "Border",
					"slug": "border"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(135deg, #e9e5ff 0%, #eef3ff 50%, #f6f7ff 100%)",
					"name": "Brand Gradient",
					"slug": "brand-gradient"
				},
				{
					"gradient": "linear-gradient(135deg, #7b6cff 0%, #5d6bff 100%)",
					"name": "Button Gradient",
					"slug": "button-gradient"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
					"name": "Inter",
					"slug": "inter"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "14px",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "16px",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "20px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "24px",
					"slug": "x-large"
				},
				{
					"name": "Huge",
					"size": "32px",
					"slug": "xx-large"
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"steps": 0,
				"mediumStep": 1.5,
				"unit": "px"
			},
			"spacingSizes": [
				{
					"name": "0",
					"size": "0",
					"slug": "0"
				},
				{
					"name": "XS",
					"size": "8px",
					"slug": "xs"
				},
				{
					"name": "SM",
					"size": "12px",
					"slug": "sm"
				},
				{
					"name": "MD",
					"size": "16px",
					"slug": "md"
				},
				{
					"name": "LG",
					"size": "24px",
					"slug": "lg"
				},
				{
					"name": "XL",
					"size": "40px",
					"slug": "xl"
				}
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"borderRadius": {
			"presets": [
				{
					"name": "Small",
					"size": "8px",
					"slug": "sm"
				},
				{
					"name": "Medium",
					"size": "12px",
					"slug": "md"
				},
				{
					"name": "Large",
					"size": "16px",
					"slug": "lg"
				}
			]
		},
		"shadow": {
			"presets": [
				{
					"name": "Small",
					"slug": "sm",
					"shadow": "0 4px 12px rgba(20, 20, 43, 0.06)"
				},
				{
					"name": "Medium",
					"slug": "md",
					"shadow": "0 8px 24px rgba(20, 20, 43, 0.08)"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--40)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"fontWeight": "600",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500"
				},
				"border": {
					"radius": "8px"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"color": {
					"text": "var(--wp--preset--color--text-muted)"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500"
				}
			},
			"core/group": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--40)"
				}
			},
			"core/cover": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--200)",
						"bottom": "var(--wp--preset--spacing--200)"
					}
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"border": {
					"radius": "8px"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}
